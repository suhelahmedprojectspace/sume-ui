{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap":true,
    "emitDeclarationOnly": false,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "es2020",
     "lib": ["ES2020", "DOM", "DOM.Iterable"],
     "baseUrl": ".",
     "paths": {
     "@sume/ui": ["./src/index.ts"],
      "@sume/ui/*": [".src/*"],
      "@sume/ui/components/*": ["../ui/src/components/*"]
    }
  },
  "include": ["src", "**/*.d.ts"],
  "exclude": ["dist", "build", "node_modules"]
}
